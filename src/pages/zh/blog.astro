---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Sample blog posts - in a real implementation, these would come from a CMS or markdown files
const posts = [
  {
    slug: 'ai-language-learning-revolution',
    title: 'AI语言学习革命：为什么对话练习是关键',
    description: '探索人工智能如何改变语言学习，以及为什么真实对话练习对流利度至关重要。',
    date: '2024-03-15',
    readTime: '5分钟阅读',
    author: '博语通团队',
    category: '语言学习',
    image: '/blog/ai-language-learning.jpg'
  },
  {
    slug: 'overcoming-language-anxiety',
    title: '克服语言焦虑：建立说话信心的技巧',
    description: '学习实用策略来克服语言学习焦虑，建立在新语言中说话的信心。',
    date: '2024-03-10',
    readTime: '4分钟阅读',
    author: '陈博士',
    category: '学习技巧',
    image: '/blog/language-anxiety.jpg'
  },
  {
    slug: 'pronunciation-mastery-guide',
    title: '发音掌握指南：听起来像母语者的秘诀',
    description: '发现提高发音和语调的专家技巧，让你在新语言中听起来更自然。',
    date: '2024-03-05',
    readTime: '6分钟阅读',
    author: '王老师',
    category: '发音',
    image: '/blog/pronunciation-guide.jpg'
  }
];
---

<Layout title={`${t('blog.title')} - 博语通 (PollyTalkie)`} lang={lang}>
  <Navigation />
  
  <main class="flex min-h-screen flex-col items-center py-12 bg-background">
    <div class="container px-4 md:px-6">
      <div class="text-center space-y-4 mb-12">
        <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl animate-fade-in">
          {t('blog.title')}
        </h1>
        <p class="mx-auto max-w-[700px] text-zinc-500 md:text-xl dark:text-zinc-400 animate-slide-up">
          {t('blog.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 animate-slide-up">
        {posts.map((post, index) => (
          <article class="group relative flex flex-col space-y-4 cursor-pointer">
            <div class="relative h-48 overflow-hidden rounded-lg">
              <div 
                class="absolute inset-0 bg-cover bg-center bg-muted"
                style={`background-image: url(${post.image})`}
              />
              <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-primary/5" />
            </div>
            <div class="space-y-2">
              <div class="flex items-center gap-x-4 text-xs">
                <span class="text-primary font-medium">{post.category}</span>
                <span class="text-zinc-500 dark:text-zinc-400">
                  <time datetime={post.date}>{post.date}</time>
                </span>
              </div>
              <div class="group-hover:text-primary">
                <h2 class="text-xl font-semibold mb-2">{post.title}</h2>
                <p class="text-sm text-muted-foreground line-clamp-3">
                  {post.description}
                </p>
              </div>
              <div class="flex items-center gap-x-4 text-sm">
                <div class="flex items-center gap-x-1">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span>{post.author}</span>
                </div>
                <div class="flex items-center gap-x-1">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{post.readTime}</span>
                </div>
              </div>
            </div>
            <span class="sr-only">{t('blog.viewArticle')}</span>
          </article>
        ))}
      </div>

      <div class="mt-12 text-center animate-fade-in">
        <p class="text-muted-foreground">
          {t('blog.contribute')}{" "}
          <a href="/zh/contact" class="text-primary hover:underline">
            {t('blog.contactUs')}
          </a>
        </p>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
