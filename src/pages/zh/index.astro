---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { Logo } from '../../components/ui/Logo';
import { ChatDemo } from '../../components/ChatDemo';
import { Testimonials } from '../../components/Testimonials';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const features = [
  {
    icon: 'chat',
    title: t('home.features.naturalConversations.title'),
    description: t('home.features.naturalConversations.description')
  },
  {
    icon: 'globe',
    title: t('home.features.multipleLanguages.title'),
    description: t('home.features.multipleLanguages.description')
  },
  {
    icon: 'person',
    title: t('home.features.personalizedLearning.title'),
    description: t('home.features.personalizedLearning.description')
  },
  {
    icon: 'rocket',
    title: t('home.features.rapidProgress.title'),
    description: t('home.features.rapidProgress.description')
  }
];
---

<Layout title="博语通 (PollyTalkie) - 您的AI对话伙伴" lang={lang}>
  <Navigation />
  
  <main class="flex min-h-screen flex-col items-center">
    <!-- Hero Section with Dialog -->
    <section class="w-full py-12 md:py-24 lg:py-32 xl:py-48 bg-background">
      <div class="container px-4 md:px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <!-- Left side: App intro -->
          <div class="flex flex-col items-center lg:items-start space-y-6 text-center lg:text-left">
            <div class="flex items-center gap-4 animate-fade-in">
              <Logo size={80} locale={lang} client:load />
              <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none">
                博语通 <span class="text-2xl font-normal text-muted-foreground">(PollyTalkie)</span>
              </h1>
            </div>
            <div class="max-w-[550px] md:text-xl animate-slide-up">
              <p class="mb-4 text-2xl font-bold text-primary">
                使用博语通，像说母语一样流利使用新语言！
              </p>
              <p class="text-zinc-600 dark:text-zinc-300">
                语言学习新境界：自然对话，真实场景，为你量身定制。
              </p>
            </div>
            <div class="flex flex-wrap gap-4 justify-center lg:justify-start animate-slide-up">
              <a 
                href="https://portal.pollytalkie.com/auth/signin"
                class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8"
              >
                {t('home.buttons.startLearning')}
              </a>
              <a 
                href="#demo"
                class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-11 px-8"
              >
                {t('home.buttons.tryDemo')}
              </a>
              <a 
                href="/zh/download"
                class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-secondary text-secondary-foreground hover:bg-secondary/80 h-11 px-8 gap-2 bg-primary/10 hover:bg-primary/20 border-2 border-primary/20"
              >
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <span>{t('home.buttons.downloadApp')}</span>
                <svg class="h-5 w-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <rect x="7" y="7" width="3" height="9"/>
                  <rect x="14" y="7" width="3" height="5"/>
                </svg>
              </a>
            </div>
          </div>
          
          <!-- Right side: Chat demo -->
          <div class="animate-fade-in" id="demo">
            <ChatDemo locale={lang} client:load />
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section with Testimonials -->
    <section class="w-full py-12 md:py-24 lg:py-32 bg-muted">
      <div class="container px-4 md:px-6">
        <h2 class="text-3xl font-bold tracking-tighter text-center mb-12 animate-fade-in">
          {t('home.features.title')}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-20">
          {features.map((feature, index) => (
            <div class="flex flex-col items-center text-center space-y-4 p-6 bg-background rounded-lg shadow-sm animate-slide-up">
              <div class="p-3 bg-primary/10 rounded-full">
                {feature.icon === 'chat' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                  </svg>
                )}
                {feature.icon === 'globe' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                )}
                {feature.icon === 'person' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                )}
                {feature.icon === 'rocket' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-bold">{feature.title}</h3>
              <p class="text-zinc-500 dark:text-zinc-400">
                {feature.description}
              </p>
            </div>
          ))}
        </div>
        
        <!-- Testimonials integrated within the features section -->
        <div class="mt-16 animate-fade-in">
          <h3 class="text-2xl font-bold tracking-tighter text-center mb-2">
            用户评价
          </h3>
          <p class="text-muted-foreground max-w-[700px] mx-auto text-center mb-8">
            听听我们的学习者如何评价博语通（PollyTalkie）
          </p>
          <Testimonials locale={lang} client:load />
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="w-full py-12 md:py-24 lg:py-32 bg-muted">
      <div class="container px-4 md:px-6">
        <div class="flex flex-col items-center space-y-4 text-center">
          <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl animate-fade-in">
            {t('home.cta.title')}
          </h2>
          <p class="mx-auto max-w-[600px] text-zinc-500 md:text-xl dark:text-zinc-400 animate-slide-up">
            {t('home.cta.description')}
          </p>
          <div class="animate-slide-up">
            <a 
              href="https://portal.pollytalkie.com/auth/signin"
              class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8 mt-4"
            >
              {t('home.cta.button')}
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
