---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Logo } from './ui/Logo';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const footerLinks = [
  { name: t('nav.about'), href: `/${lang}/about` },
  { name: t('nav.terms'), href: `/${lang}/terms` },
  { name: t('nav.privacy'), href: `/${lang}/privacy` },
];
---

<footer class="w-full border-t bg-background">
  <div class="container flex flex-col items-center justify-between gap-4 py-10 md:h-24 md:flex-row md:py-0">
    <div class="flex items-center gap-2">
      <Logo size={24} locale={lang} client:load />
      <p class="text-sm leading-loose text-center md:text-left">
        {t('footer.description')}
      </p>
    </div>
    <nav class="flex items-center gap-4 text-sm">
      {footerLinks.map((link) => (
        <a
          href={link.href}
          class="transition-colors hover:text-foreground/80 text-foreground/60"
        >
          {link.name}
        </a>
      ))}
    </nav>
  </div>
</footer>
